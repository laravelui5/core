{
	"name": "@laravelui5/core",
	"version": "1.0.0",
	"description": "A reusable tools library for OpenUI5 applications, including session and HTTP utilities.",
	"author": "Michael Gerzabek",
	"license": "proprietary",
	"scripts": {
		"clean": "rimraf dist coverage",
		"build": "ui5 build --clean-dest",
		"start": "ui5 serve -o test-resources/io/pragmatiqu/core/Form.html",
		"start:dist": "npm start -- --config ui5-dist.yaml",
		"testsuite": "ui5 serve -o test-resources/io/pragmatiqu/core/qunit/testsuite.qunit.html",
		"lint": "eslint src test",
		"karma": "karma start",
		"karma-ci": "karma start karma-ci.conf.js",
		"karma-ci-cov": "karma start karma-ci-cov.conf.js",
		"test": "npm run lint && npm run karma-ci-cov"
	},
	"devDependencies": {
		"@openui5/types": "1.136.0",
		"@ui5/cli": "^4.0.16",
		"@ui5/ts-interface-generator": "^0.8.3",
		"eslint": "^9.27.0",
    "globals": "^15.9.0",
		"karma": "^6.4.4",
		"karma-chrome-launcher": "^3.2.0",
		"karma-coverage": "^2.2.1",
		"karma-ui5": "^4.0.1",
		"rimraf": "^6.0.1",
		"ui5-middleware-livereload": "^3.0.3"
	}
}
