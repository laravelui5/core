{
    "name": "laravelui5/core",
    "description": "Foundation layer for integrating OpenUI5 into Laravel applications. Provides the runtime and developer tooling to build UI5 apps in a Laravel-native workflow.",
    "keywords": [
        "laravel",
        "laravel-package",
        "openui5",
        "ui5",
        "odata",
        "fiori",
        "microfrontend",
        "enterprise",
        "adminpanel",
        "sdk",
        "enterprise-apps"
    ],
    "type": "library",
    "license": "Apache-2.0",
    "homepage": "https://laravelui5.com",
    "support": {
        "issues": "https://github.com/laravelui5/core/issues",
        "source": "https://github.com/laravelui5/core",
        "docs": "https://laravelui5.com/guide/"
    },
    "authors": [
        {
            "name": "Michael Gerzabek",
            "email": "michael.gerzabek@gmail.com",
            "homepage": "https://pragmatiqu.io"
        }
    ],
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/pragmatiqu/lodata"
        }
    ],
    "require": {
        "php": "^8.3",
        "ext-dom": "*",
        "ext-libxml": "*",
        "ext-simplexml": "*",
        "doctrine/dbal": "^4.3",
        "illuminate/console": "^12.0",
        "illuminate/contracts": "^12.0",
        "illuminate/database": "^12.0",
        "illuminate/filesystem": "^12.0",
        "illuminate/http": "^12.0",
        "illuminate/routing": "^12.0",
        "illuminate/support": "^12.0",
        "illuminate/view": "^12.0",
        "league/flysystem": "^3.0",
        "symfony/yaml": "^7.2",
        "pragmatiqu/lodata-modular": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "LaravelUi5\\Core\\": "src/"
        }
    },
    "require-dev": {
        "orchestra/testbench": "^10.6",
        "phpunit/phpunit": "12.3.7",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Fixtures\\Hello\\": "tests-fixture/src"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "LaravelUi5\\Core\\Ui5CoreServiceProvider"
            ]
        }
    }
}
